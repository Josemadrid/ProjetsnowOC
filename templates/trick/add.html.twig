{% extends 'base.html.twig' %}


{% form_theme form _self %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 col-md-offset-1 update-trick">
                <div class="card card-small mb-4">
                    <div class="card-header border-bottom text-center">
                        <h3 class="m-0">Ajouter un trick</h3>
                    </div>
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                    {% endfor %}
                    {% if error %}
                        <div class="alert alert-danger">
                            {{ error | trans ({}, 'error') }}
                        </div>
                    {% endif %}
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item p-3">
                            <div class="row">
                                <div class="col">
                                    {% form_theme form _self %}
                                    {{ form_start(form) }}
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            {{ form_row(form.name) }}
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            {{ form_row(form.file) }}
                                        </div>
                                        <div class="form-group col-md-6">
                                            {{ form_row(form.type) }}
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        {{ form_row(form.description) }}
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6 text-center">
                                            <p>Cliquez pour ajouter une image</p>
                                            {{ form_widget(form.pictures) }}
                                            <input type="hidden" id="image-counter" value="0">
                                            <div class="form-group mt-2">
                                                <button type="button" class="btn btn-outline-success" id="add-image">Ajouter une image</button>

                                            </div>
                                        </div>
                                        <div class="form-group col-md-6 text-center">
                                            <p>Cliquez pour ajouter une vidéo Youtube</p>
                                            {{ form_widget(form.videos) }}
                                            <input type="hidden" id="video-counter" value="0">
                                            <div class="form-group mt-2">
                                                <button type="button" class="btn btn-outline-success" id="add-video">
                                                    Ajouter une vidéo
                                                </button>

                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group mt-4 text-center">
                                        <button type="submit" class="btn btn-success">Ajouter</button>
                                    </div>
                                    {{ form_end(form) }}
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
