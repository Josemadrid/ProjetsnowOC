{% extends 'base.html.twig' %}
{% block title %}Snowtricks - Inscription{% endblock %}
{% block body %}
    <div class="container registration">
        <div class="card card-small mb-4">
            <div class="card-header border-bottom text-center">

                <div class="row justify-content-center">
                    <div class="col-2">
                        <img class="img-fluid mb-5" src="/pictures/adduser.png" alt="Registration Logo">
                    </div>
                </div>


                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <h1 class="mb-5 text-center">Inscrivez-vous</h1>
                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success">
                                {{ message }}
                            </div>
                        {% endfor %}
                        {{ form_start(form) }}
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                {{ form_row(form.username) }}
                            </div>
                            <div class="form-group col-md-12">
                                {{ form_row(form.password) }}
                            </div>
                            <div class="form-group col-md-12">
                                {{ form_row(form.email) }}

                                <button type="submit" class="btn btn-success">Incription</button>
                            </div>
                            {{ form_end(form) }}

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}


